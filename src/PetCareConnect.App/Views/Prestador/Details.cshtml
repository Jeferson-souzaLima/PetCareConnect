@model PetCareConnect.App.ViewModels.PrestadorViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="h1">Detalhes do Prestador</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4" style="background-color: white; border-radius: 10px;">
            
            
            <div class="form-group">
                <label class="control-label">Nome</label>
                <p>@Model.Nome</p>
            </div>

            <div class="form-group">
                <label class="control-label">Documento</label>
                <p>@Model.Documento</p>
            </div>

            <div class="form-group">
                <label class="control-label">Tipo de Prestador</label>
                <p>@Model.TipoPrestador</p>
            </div>
            
            @if( Model.Endereco != null){
            <div class="form-group">
                <label class="control-label">Cep</label>
                <p>@Model.Endereco.Cep</p>
            </div>
            
            <div class="form-group">
                <label class="control-label">Estado</label>
                <p>@Model.Endereco.Estado</p>
            </div>
            
            <div class="form-group">
                <label class="control-label">Cidade</label>
                <p>@Model.Endereco.Cidade</p>
            </div>

            <div class="form-group">
                <label class="control-label">Bairro</label>
                <p>@Model.Endereco.Bairro</p>
            </div>
            
            <div class="form-group">
                <label class="control-label">Logradouro</label>
                <p>@Model.Endereco.Logradouro</p>
            </div>
            }
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar</a>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
