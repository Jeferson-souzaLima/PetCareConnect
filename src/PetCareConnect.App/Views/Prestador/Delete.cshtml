@model PetCareConnect.App.ViewModels.PrestadorViewModel


@{
    ViewData["Title"] = "Excluir Loja";
}

<h1 class="h1">Excluir Loja</h1>
<hr />

<h3 class="h1 text-center">Deseja realmente apagar esta loja? </h3>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4" style="background-color: white; border-radius: 10px;">

            <div class="form-group">
                <label class="control-label">Nome</label>
                <p>@Model.Nome</p>
            </div>

            <div class="form-group">
                <label class="control-label">Documento</label>
                <p>@Model.Documento</p>
            </div>

            <div class="form-group">
                <label class="control-label">TipoPrestador</label>
                <p>@Model.TipoPrestador</p>
            </div>

            <div class="form-group">
                <label class="control-label">Endereço</label>
                <p>@Model.Endereco</p>
            </div>

            <div class="form-group">
                <label class="control-label">Imagem</label>
                <p>@Model.ImagemUpload</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </form>

            
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>
    </div>
</div>


