@model PetCareConnect.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1 class="h1">Detalhes do Produto</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4" style="background-color: white; border-radius: 10px;">
            
            <div class="form-group">
                <label class="control-label">Nome do Poduto</label>
                <p>@Model.Nome</p>
            </div>

            <div class="form-group">
                <label class="control-label">Descrição do Poduto</label>
                <p>@Model.Descricao</p>
            </div>

            <div class="form-group">
                <label class="control-label">Valor do Poduto</label>
                <p>R$ @Model.Valor</p>
            </div>

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar</a>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
