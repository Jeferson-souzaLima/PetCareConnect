@model PetCareConnect.App.ViewModels.ServicoViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h1">Excluir Serviço</h1>
<hr />

<h3 class="h1 text-center">Deseja realmente apagar esta serviço? </h3>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4" style="background-color: white; border-radius: 10px;">

            <div class="form-group">
                <label class="control-label">Nome</label>
                <p>@Model.Nome</p>
            </div>

            <div class="form-group">
                <label class="control-label">Documento</label>
                <p>@Model.Descricao</p>
            </div>

            <div class="form-group">
                <label class="control-label">TipoPrestador</label>
                <p>@Model.Valor</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>

        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>
    </div>
</div>