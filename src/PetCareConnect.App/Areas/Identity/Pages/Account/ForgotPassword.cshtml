@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar senha";
}

<h1 class="h1">Recuperar senha</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card p-4" style="background-color: white; border-radius: 10px;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-success">Reset Password</button>
        </form>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
